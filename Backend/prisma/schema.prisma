generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  
}

//models schema 

//User Table

model User{
    id Int @id @default(autoincrement())
    name String 
    username String @unique
    email String @unique
    password String 
    createdAt DateTime @default(now())
    personalExpenses PersonalExpense[]
    sentFriendRequests Friend[] @relation("sentRequests")
    receiveFriendRequests Friend[] @relation("receivedRequests")
    billsCreated Bill[] @relation("createdBy")
    participations BillParticipant[]
}


model Friend{
    id Int @id @default(autoincrement())
    senderId Int
    receiverId Int
    status FriendshipStatus @default(PENDING)
    createdAt DateTime @default(now())
    sender User @relation("sentRequests", fields: [senderId],references: [id])
    receiver User @relation("receivedRequests",fields: [receiverId],references: [id])
    @@unique([senderId,receiverId])
    @@index([senderId])
    @@index([receiverId])
}

enum FriendshipStatus{
    PENDING
    ACCEPTED
    BLOCKED
}

model Bill{
    id Int @id @default(autoincrement())
    title String
    totalAmount Float
    createdAt DateTime @default(now())
    createdById Int 
    createdBy User @relation("createdBy",fields: [createdById],references: [id])
    participants BillParticipant[] @relation("billParticipants")
}

model BillParticipant{
    id Int @id @default(autoincrement())
    userId Int
    billId Int
    amountOwed Float
    isSettled Boolean @default(false)
    user User @relation(fields: [userId],references: [id])
    bill Bill @relation("billParticipants",fields: [billId],references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())
    @@unique([userId,billId])
}
//schema for personal epxenses 

model PersonalExpense {
  id          Int       @id @default(autoincrement())
  title       String
  amount      Float
  category    ExpenseCategory
  note        String
  date        DateTime  @default(now())
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  @@index([userId])
  @@index([date])
}

enum ExpenseCategory {
  FOOD
  TRAVEL
  GROCERY
  SHOPPING
  RENT
  UTILITIES
  HEALTH
  ENTERTAINMENT
  EDUCATION
  SUBSCRIPTION
  OTHERS
}